{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "outDir": "build",
    "allowJs": true
  },
  "include": [
    "tests/js/**/*.ts",
    "tests/prompts/harness/**/*.ts",
    "js/**/*.ts"
  ]
}
